					"rotate_45": "q.block_state('minecraft:block_face') == 'up' && !math.mod(q.block_state('dragonmounts:rotation') - 2, 4)",
					"rotate_67_5": "q.block_state('minecraft:block_face') == 'up' && !math.mod(q.block_state('dragonmounts:rotation') - 3, 4)",
					"back": "q.block_state('minecraft:block_face') != 'up'"
				}
			},
			"minecraft:light_dampening": 0,
			"minecraft:map_color": "#FFFFFF",
			"minecraft:material_instances": {
