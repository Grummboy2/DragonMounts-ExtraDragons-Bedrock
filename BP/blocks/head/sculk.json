				}
			},
			{
				"condition": "q.block_state('dragonmounts:rotation') >= 8 || q.block_state('minecraft:block_face') == 'south'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							180,
							0
						]
					}
				}
			},
			{
				"condition": "q.block_state('dragonmounts:rotation') >= 12 || q.block_state('minecraft:block_face') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
